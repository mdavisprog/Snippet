class_name BasePopupMenu
extends PopupMenu

# This class offers base functionality useful for all popups driven by code.

func _ready() -> void:
	var _Error = connect("id_pressed", self, "OnPressed")
	

func popup_at_mouse():
	popup()
	set_global_position(get_global_mouse_position())
	

func OnPressed(_Id: int) -> void:
	pass
	
